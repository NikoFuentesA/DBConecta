create database vehiculos2;
use vehiculos2;

create table usuario(
usuario varchar (50) not null,
contraseña varchar (50),
tipo varchar (50)
);

create table poliza (
nombre varchar (50) not null,
tipo_documento varchar (50) not null,
N°_documento int not null,
fecha_inicio date not null,
fecha_fin date not null,
tipo varchar (50) not null,
marca varchar (50) not null,
cilindraje double not null,
servicio varchar (50) not null,
ciudad varchar (50) not null,
placa varchar (50) not null,
modelo varchar (50) not null,
valor int not null,
estado varchar (50) not null,
id int not null
);

create table tasa (
id int not null,
rcc double not null,
rce double not null, 
daños double not null,
manejo double not null,
tasa_t double not null,
uso double not null,
cilindraje int not null,
modelo double not null,
total double not null
);

create table tasa_iva(
id int not null ,
rcc_iva double not null,
rce_iva double not null,
daños_iva double not null,
manejo_iva double not null,
tasa_t_iva  double not null,
uso_iva double not null,
cilindraje_iva double not null,
modelo_iva double not null,
total_iva double not null
);

create table total_tasa(
id int not null,
rcc_total double not null,
rce_total double not null,
daños_total double not null,
manejo_total double not null,
tasa_t_total double not null,
uso_total double not null,
cilindraje_total double not null,
modelo_total double not null,
total_total double not null
);

create table tasa_vehiculo(
tasa_moto double not null,
tasa_auto double not null,
tasa_campero double not null, 
tasa_camoineta double not null,
tasa_cuatrimoto double not null,
tasa_moto_electrica double not null
);

create table tipo_vehiculo(
vehiculos_particulares varchar (50) not null,
vehiculos_servicio varchar (50) not null,
vehiculos_oficiales varchar (50) not null
);

create table cilindraje(
cc80_199  double not null,
cc200_600 double not null,
cc601 double not null 
);

create table modelo(
año_1990_2000 date not null,
año_2001_2010 date not null,
año_2011_2020 date not null ,
año_2021_2030 date not null
);

create table rater(
trcc double not null,
trce double not null,
tdaños double not null,
tmanejo double not null
);
