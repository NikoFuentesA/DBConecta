create database vehiculos2;
use vehiculos2;

create table usuario(
usuario varchar (50) not null,
contraseña varchar (50),
tipo varchar (50)
);

create table poliza (
nombre varchar (50) not null,
tipo_documento varchar (50) not null,
N_documento int not null,
fecha_inicio date not null,
fecha_fin date not null,
tipo varchar (50) not null,
marca varchar (50) not null,
cilindraje float not null,
servicio varchar (50) not null,
ciudad varchar (50) not null,
placa varchar (50) not null,
modelo varchar (50) not null,
valor float not null,
estado varchar (50) not null,
id int primary key not null
);

create table tasa (
id int primary key not null,
rcc float not null,
rce float not null, 
daños float not null,
manejo float not null,
tasa_t float not null,
uso float not null,
cilindraje int not null,
modelo float not null,
total float not null
);

create table tasa_iva(
id int not null ,
rcc_iva float not null,
rce_iva float not null,
daños_iva float not null,
manejo_iva float not null,
tasa_t_iva  float not null,
uso_iva float not null,
cilindraje_iva float not null,
modelo_iva float not null,
total_iva float not null
);

create table total_tasa(
id int not null,
rcc_total float not null,
rce_total float not null,
daños_total float not null,
manejo_total float not null,
tasa_t_total float not null,
uso_total float not null,
cilindraje_total float not null,
modelo_total float not null,
total_total float not null
);

create table tasa_vehiculo(
tasa_moto float not null,
tasa_auto float not null,
tasa_campero float not null, 
tasa_camoineta float not null,
tasa_cuatrimoto float not null,
tasa_moto_electrica float not null
);

create table tipo_vehiculo(
vehiculos_particulares varchar (50) not null,
vehiculos_servicio varchar (50) not null,
vehiculos_oficiales varchar (50) not null
);

create table cilindraje(
cc80_199  float not null,
cc200_600 float not null,
cc601 float not null 
);

create table modelo(
año_1990_2000 date not null,
año_2001_2010 date not null,
año_2011_2020 date not null ,
año_2021_2030 date not null
);

create table rater(
trcc float not null,
trce float not null,
tdaños float not null,
tmanejo float not null
);
