create database vehiculos;
use vehiculos;

CREATE TABLE Usuario(
	Id_Usuario int AUTO_INCREMENT NOT NULL,
	Cedula int NOT NULL,
	Tipo_de_documento varchar(20) NOT NULL,
	Nombre varchar(20) NOT NULL,
	tipo_usuario varchar (30) NOT NULL,
	Contraseña varchar(20) NOT NULL
);


create table documento (
	id_documento int primary key,
   	 descripcion Varchar (50) not null
);


Create Table tipo_vechiculo  (
	id_tipo_de_vehiculo int primary key not null,
	tipo varchar(50) not null,
	tasa_tipo_de_vehiculo double not null
);


create table uso_vehiculo(
	 id_uso_vehiculo int primary key,
 	uso varchar (50) not null,
 	Tasa_Uso_vehiculo int 
);

create table cilindraje (
	id_cilindraje int primary key,
	cilindraje int primary key,
	Tasa_Cilindraje int
);

create table marca (
	id_marca int primary key,
	marca varchar (50) not null
);

create table localizacion (
	id int primary key,
	Lugar varchar(50) not null
);

 create table modelo (
 	id_modelo int primary key,
 	modelo varchar(50) not null,
	Tasa_Modelo int 
 );
create table comision (
	id_comision int primary key,
	comision double not null
);

create table poliza(
	id_poliza int  primary key AUTO_INCREMENT ,
	placa varchar(20) NOT NULL,
	Servicio varchar(20) NOT NULL,
	Valor_Asegurado int NOT NULL,
	Cedula int NOT NULL,
	Tipo_de_documento varchar(20) NOT NULL,
	Nombre varchar(20) NOT NULL,
	Apellido varchar(20) NOT NULL,
	Prima_Antes_Impuestos int NULL,
	Prima_Total int NULL,
	Impuestos int NULL,
	Estado_Poliza varchar (20) NOT NULL,
	Razon_Estado_Poliza varchar (50) NOT NULL);
    
    
    CREATE TABLE Beneficiario (
	Id_Usuario int AUTO_INCREMENT NOT NULL,
	Cedula int NOT NULL,
	Tipo_de_documento varchar(20) NOT NULL,
	Nombre varchar(20) NOT NULL,
	Correo varchar(20) NULL
);
    

create table usuarios_A(
	usuario_a varchar (50) not null,
	contraseña varchar (50) not null
);


/* usuario_a para los usuarios que puedan editar las tablas documento y todos los documentos llenables  como nombre docuemtno etc...
el usuario_b es para que los usuarios esten deacuerdo o no en que se envien los datos a la base de datos */


create table usuarios_B( 
	usuario_b varchar (50) not null,
	contraseña varchar (50) not null
);
